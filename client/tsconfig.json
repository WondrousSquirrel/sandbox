{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "jsx": "react",
      "module": "esnext",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src/**/**/*"]
  }